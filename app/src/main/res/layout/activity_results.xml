<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_green"
    tools:context=".Results"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/dark_green"
            app:title="Results"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/dark_green"
            android:padding="16dp"
            tools:ignore="Suspicious0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Football Button -->
                <Button
                    android:id="@+id/btn_football"
                    android:layout_height="80dp"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/green"
                    android:drawableLeft="@drawable/football"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical|start"
                    android:minHeight="80dp"
                    android:padding="10dp"
                    android:text="Football"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Basketball Button -->
                <Button
                    android:id="@+id/btn_basketball"
                    android:layout_height="80dp"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/green"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/basketball"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical|start"
                    android:minHeight="80dp"
                    android:padding="10dp"
                    android:text="Basketball"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Handball Button -->
                <Button
                    android:id="@+id/btn_handball"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/green"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/handball"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical|start"
                    android:minHeight="80dp"
                    android:padding="10dp"
                    android:text="Handball"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Hockey Button -->
                <Button
                    android:id="@+id/btn_hockey"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/green"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/hockey"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical|start"
                    android:minHeight="80dp"
                    android:padding="10dp"
                    android:text="Hockey"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Netball Button -->
                <Button
                    android:id="@+id/btn_netball"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/green"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/netball"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical|start"
                    android:minHeight="80dp"
                    android:padding="10dp"
                    android:text="Netball"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Athletics Button -->
                <Button
                    android:id="@+id/btn_athletics"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/green"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/athletics"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical|start"
                    android:minHeight="80dp"
                    android:padding="10dp"
                    android:text="Athletics"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Volleyball Button -->
                <Button
                    android:id="@+id/btn_volleyball"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/green"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/volleyball"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical|start"
                    android:minHeight="80dp"
                    android:padding="10dp"
                    android:text="Volleyball"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Tennis Button -->
                <Button
                    android:id="@+id/btn_tennis"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/green"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/tennis"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical|start"
                    android:minHeight="80dp"
                    android:padding="10dp"
                    android:text="Tennis"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Table Tennis Button -->
                <Button
                    android:id="@+id/btn_table_tennis"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/green"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/tabletennis"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical|start"
                    android:minHeight="80dp"
                    android:padding="10dp"
                    android:text="Table Tennis"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Badminton Button -->
                <Button
                    android:id="@+id/btn_badminton"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/green"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/badminton"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical|start"
                    android:minHeight="60dp"
                    android:padding="10dp"
                    android:text="Badminton"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/menu_main" />

</androidx.drawerlayout.widget.DrawerLayout>